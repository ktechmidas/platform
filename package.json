{
  "name": "dash-platform",
  "private": true,
  "scripts": {
    "setup": "npm run bootstrap && npm run data:reset",
    "bootstrap": "npm ci && lerna run build",
    "build": "lerna run build",
    "configure": "./scripts/configure_dashmate.sh",
    "start": "./packages/dashmate/bin/dashmate group:start --wait-for-readiness --verbose",
    "stop": "./packages/dashmate/bin/dashmate group:stop",
    "data:clean": "./scripts/clean_data.sh",
    "data:setup": "./scripts/setup_local.sh && npm run test:suite:configure",
    "data:reset": "npm run data:clean && npm run configure && npm run data:setup",
    "test:suite:configure": "./scripts/configure_test_suite.sh",
    "test:suite": "npm run start && lerna run test --scope @dashevo/platform-test-suite ; npm run stop",
    "build_and_run_test_suite": "npm run build && npm run configure && npm run test:suite"
  },
  "devDependencies": {
    "lerna": "3.22.1"
  },
  "workspaces": [
    "packages/dapi",
    "packages/dapi-client",
    "packages/dapi-grpc",
    "packages/dashmate",
    "packages/dpns-contract",
    "packages/drive",
    "packages/feature-flags-contract",
    "packages/js-abci",
    "packages/js-dash-sdk",
    "packages/js-dpp",
    "packages/js-grpc-common",
    "packages/platform-test-suite",
    "packages/wallet-lib"
  ]
}
